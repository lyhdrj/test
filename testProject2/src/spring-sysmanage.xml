	</bean>

	<!--bean id="orgManageServices" parent="txProxyTemplate">  
	        <property name="target" ref="orgManageService">  
	        </property>  
	</bean-->  
	<bean name="orgManageDao"
		class="com.nasoft.sysmanage.persistence.sqlmapdao.OrgManageDaoImpl">
		<property name="sqlMapClient" ref="sqlMapClient" />
	</bean>
	<!-- 部门管理 end -->

	<!-- 职位管理 start -->
	<bean name="positionManage"
		class="com.nasoft.sysmanage.struts.action.PositionManageAction">
		<constructor-arg index="0" ref="positionManageService"></constructor-arg>
	</bean>
	<bean name="positionManageService"
		class="com.nasoft.sysmanage.service.impl.PositionManageServiceImpl">
		<property name="positionManageDao" ref="positionManageDao" />
	</bean>

	<!-- bean id="positionManageServices" parent="txProxyTemplate">  
	        <property name="target" ref="positionManageService">  
	        </property>  
	</bean-->  
	<bean name="positionManageDao"
		class="com.nasoft.sysmanage.persistence.sqlmapdao.PositionManageDaoImpl">
		<property name="sqlMapClient" ref="sqlMapClient" />
	</bean>
