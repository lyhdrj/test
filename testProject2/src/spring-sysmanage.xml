<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsp="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsp:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
	http://www.springframework.org/schema/tx
	http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">
	

	<!-- 用户登陆 start -->
	<bean id="userLoginDao"
		class="com.nasoft.sysmanage.persistence.sqlmapdao.UserLoginDaoImpl">
		<property name="sqlMapClient">
			<ref bean="sqlMapClient" />
		</property>
	</bean>

	<bean id="userService" class="com.nasoft.sysmanage.service.impl.UserServiceImpl">
		<property name="dao" ref="userLoginDao" />
	</bean>

	<!--bean id="userServices" parent="txProxyTemplate">  
	        <property name="target" ref="userService">  
	        </property>  
	</bean-->  


	<bean name="userlogin" class="com.nasoft.sysmanage.struts.action.UserLoginAction">
		<constructor-arg index="0" ref="userService"></constructor-arg>
	</bean>
	<!-- 用户登陆 end -->




	<!-- 单位管理 start -->
	<bean name="companyManage"
		class="com.nasoft.sysmanage.struts.action.CompanyManageAction">

		<property name="companyManageService" ref="companyManageService" />
	</bean>

	<bean name="companyManageService"
		class="com.nasoft.sysmanage.service.impl.CompanyManageServiceImpl">
		<property name="companyManageDao" ref="companyManageDao" />
	</bean>

	<!--bean id="companyManageServices" parent="txProxyTemplate">  
	        <property name="target" ref="companyManageService">  
	        </property>  
	</bean-->  
	<bean name="companyManageDao"
		class="com.nasoft.sysmanage.persistence.sqlmapdao.CompanyManageDaoImpl">
		<property name="sqlMapClient" ref="sqlMapClient" />
	</bean>
	<!-- 单位管理 end -->



	<!-- 部门管理 start -->
	<bean name="orgManage" class="com.nasoft.sysmanage.struts.action.OrgManageAction">

		<property name="orgManageService" ref="orgManageService" />
	</bean>

	<bean name="orgManageService"
		class="com.nasoft.sysmanage.service.impl.OrgManageServiceImpl">
