	<!--bean id="userResetPwdServices" parent="txProxyTemplate">  
	        <property name="target" ref="userResetPwdService">  
	        </property>  
	</bean-->  
	<bean name="userResetPwdDao"
		class="com.nasoft.sysmanage.persistence.sqlmapdao.UserResetPwdDaoImpl">
		<property name="sqlMapClient" ref="sqlMapClient" />
