<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="UserResetPwd">

    <typeAlias alias="userResetPwdBean" type="com.nasoft.sysmanage.model.UserResetPwdBean"/>
    
    <update id="resetPwd" parameterClass="userResetPwdBean">
		update tm_user set password=#newPwd# where user_id=#userId# and  password=#oldPwd#
    </update>
</sqlMap>